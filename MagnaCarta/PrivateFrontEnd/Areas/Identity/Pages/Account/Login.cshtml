@page
@model LoginModel

<div class="row justify-content-center">
    <div class="col-sm-6 text-center">
        <section>
            <form id="account" method="post">
                <h1 class="mt-5 mb-3 text-start logo">MagnaCarta</h1>
                <h2 class="mb-2">Iniciar sesión</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label">Usuario</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label">Contraseña</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox my-2">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Mantener la sesión abierta
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Entrar</button>
                </div>
            </form>
        </section>
    </div>
</div>
<style>
.logo {
    font-family: fantasy;
    font-size: xxx-large;
    color: coral;
    border-bottom: solid 5px;
}
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
